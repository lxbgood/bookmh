<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:paddingBottom="20dp"
    android:paddingTop="15dp" >

    <RelativeLayout
        android:id="@+id/header_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/header_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_loading_pic_down" />

            <ProgressBar
                android:id="@+id/header_progressbar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminate="false"
                android:indeterminateDrawable="@drawable/refresh_progress_style"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/header_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/header_hint_refresh_ready"
            android:textColor="@color/font_C_secondary_info_color_black_gray"
            android:textSize="@dimen/font_main_text_size" />
    </RelativeLayout>

</RelativeLayout>