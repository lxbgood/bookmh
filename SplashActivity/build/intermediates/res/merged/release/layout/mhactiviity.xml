<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_lay"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"  />

        <TextView
            android:id="@+id/booktitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="@color/banblack"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="嗨阅读"
            android:textColor="@color/white"
            android:textSize="@dimen/font_home_sub_title_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_lay"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/jianjie_lay"
        android:orientation="horizontal" >
		<ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:background="@drawable/title_icon" 
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="内容简介"
            android:layout_marginLeft="10dp"
            android:textColor="@color/font_text_color_txt"
            android:textSize="@dimen/font_home_sub_title_size" />
    </LinearLayout>
    <TextView
            android:id="@+id/centext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="内容简介"
            android:layout_below="@+id/jianjie_lay"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/font_text_color"
            android:textSize="@dimen/font_assistant_text_size" />
    <TextView
            android:id="@+id/button_start"
            android:layout_width="match_parent"
            android:layout_height="40dp" 
            android:text="开始阅读" 
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:background="@color/font_B_highlight_color_red"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/font_title_size" />
</RelativeLayout>