<?xml version="1.0" encoding="utf-8"?> 
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent" > 
<LinearLayout  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView android:id="@+id/game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="10dip"
        android:textColor="@color/font_A_assistant_color_black"
        android:textSize="@dimen/font_title_size"
        android:text="热门游戏" />

    <com.markmao.pulltorefresh.widget.MyGridView
        android:id="@+id/gameView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numColumns="3" >
    </com.markmao.pulltorefresh.widget.MyGridView>
    <View
        android:id="@+id/my_share_line_8"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/title_lay"
        android:background="@color/all_bg" >
    </View>
     <TextView android:id="@+id/book"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="10dip" 
        android:textColor="@color/font_A_assistant_color_black"
        android:textSize="@dimen/font_title_size"
        android:text="热门动漫" />

     <com.markmao.pulltorefresh.widget.MyGridView
         android:id="@+id/gridView1"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:numColumns="3" >
     </com.markmao.pulltorefresh.widget.MyGridView>
     <View
                    android:id="@+id/my_share_line_4"
                    android:layout_width="fill_parent"
                    android:layout_height="5dp"
                    android:layout_below="@+id/title_lay"
                    android:background="@color/all_bg" >
                </View>
  <TextView android:id="@+id/manhua"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="10dip" 
        android:textColor="@color/font_A_assistant_color_black"
        android:textSize="@dimen/font_title_size"
        android:text="精品好书" />

     <com.markmao.pulltorefresh.widget.MyGridView
         android:id="@+id/manhuagridView1"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:numColumns="3" >
     </com.markmao.pulltorefresh.widget.MyGridView>
</LinearLayout>
</ScrollView>  
